# Function for reading the TXT FILE
def readFile():
    f = open("logs.txt", "r")
    if f.mode == 'r':
        content = f.read()
    f.close()
    return content

# FUNCTION FOR WRITING ON THE TXT FILE
def writeFile(data):
    f = open(f"logs.txt", "a")
    if f.mode == 'a':
        f.write(data)
        f.write('\n')
    f.close()

actual_hour = datetime.datetime.now()
date_string = actual_hour.strftime("%d/%m/%Y %H:%M:%S")
data = "Starts at " + date_string
# FALTARIA AÃ‘ADIR CUANDO ACABA

try:
  # WE OPEN THE LOGS FILE
  open("logs.txt")
  writeFile(data)
except FileNotFoundError:
  # IF THERE IS NO SUCH FILE, WE CREATE IT
  writeFile(data)
